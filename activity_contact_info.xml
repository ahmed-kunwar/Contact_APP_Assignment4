<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/info_img"
        android:background="@android:color/white"

        />
    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/info_img1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />

        <TextView
            android:layout_toRightOf="@id/info_img1"
            android:id="@+id/text1"
            android:layout_alignTop="@id/info_img1"
            android:layout_marginHorizontal="10dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_below="@id/info_img1"
            android:id="@+id/info_img2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/white"

            />

        <TextView
            android:id="@+id/text2"
            android:layout_toRightOf="@id/info_img2"
            android:layout_alignTop="@id/info_img2"
            android:layout_marginHorizontal="10dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
        <TextView
            android:layout_toRightOf="@id/info_img2"
            android:layout_below="@id/text2"
            android:layout_marginHorizontal="10dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile"
            android:textColor="@android:color/darker_gray"
            />

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_below="@id/info_img1"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="20dp"
            android:id="@+id/info_img3"
            android:layout_width="30dp"
            android:layout_height="30dp"

            />

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_below="@id/info_img2"
            android:id="@+id/info_img4"
            android:layout_width="40dp"
            android:layout_height="40dp"

            />

        <TextView
            android:id="@+id/text3"
            android:layout_toRightOf="@id/info_img4"
            android:layout_alignTop="@id/info_img4"
            android:layout_marginHorizontal="10dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
        <TextView
            android:layout_toRightOf="@id/info_img4"
            android:layout_below="@id/text3"
            android:layout_marginHorizontal="10dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal"
            android:textColor="@android:color/darker_gray"
            />
    </RelativeLayout>

</LinearLayout>